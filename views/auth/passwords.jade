extends ../layout
block body
  include ../navbar
  div(style="background-color:#f7f7f8")
    .container
      br
      br
      .col-md-4.col-md-offset-4
        if message
          h3=message
        form(name='register', id='register', method='post', action='/verify', onsubmit='checkForm();')
          .panel.panel-default
            .panel-body
              .form-group
                input.form-control(type='text', id='username', name='username', placeholder='Create a username', required)
              .form-group
                input.form-control(type='password', id='password', name='password', placeholder='Create a password', required)
              .form-group
                input.form-control(type='password', id='confirm-password', name='confirm-password', placeholder='Verify password', required)
              .form-group
                input.form-control(type='hidden', id='token', name='token', value=token)
              .form-group
              hr
              input(type='submit', id='submit', name='submit', value='Create account').button.button-flat-action.pull-right.btn-block

        //- .well
          table.table.table-condensed.text-left.table-bordered
            tr
              td username
              td test
            tr
              td password
              td test

  script.
    $('#register').onsubmit(function(){
      checkForm();
    });

    function checkForm(){ 
      var password1 = $('#password').val();
      var password2 = $('#confirm-password').val();
      if( password1 != password2 ) alert("Passwords don't match");
    }
