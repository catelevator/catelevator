extends ../layout
block body
  .text-center
    br
    br
    br
    h1.reallyBig.cursive.brand-color Cat Elevator
    .container
      br
      br
      .col-md-4.col-md-offset-4
        if message
          h3=message
        form(action='/login', method='post')
          .panel.panel-default
            .panel-body
              .panel-body
                .form-group
                  input#inputUsername.form-control.input-lg(type='text', name='username', placeholder='Select a user name', required)
                .form-group
                  input#inputPassword.form-control.input-lg(type='password', name='password', placeholder='Create a password', required)
                .form-group
                hr
                input(type='submit', value='Sign in').button.button-flat-primary.button-pill.btn-block
          
          p.text-center Don't have an account?  
            a(href="/signup")  Sign up


        //- .well
          table.table.table-condensed.text-left.table-bordered
