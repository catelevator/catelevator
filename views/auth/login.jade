extends ../layout
block body
  include ../navbar
  div(style="background-color:#f7f7f8")
    .container
      br
      br
      br
      .col-md-4.col-md-offset-4
        if message
          h3=message
        form(action='/login', method='post')
          .panel.panel-default
            .panel-body
              .panel-body
                .form-group
                  input#inputUsername.form-control(type='text', name='username', placeholder='Select a user name', required)
                .form-group
                  input#inputPassword.form-control(type='password', name='password', placeholder='Create a password', required)
                .form-group
                hr
                input(type='submit', value='Sign in').button.button-flat-primary.pull-right.btn-block
              .panel-footer
                p Don't have an account?
                  a(href="/signup")   Sign up


        //- .well
          table.table.table-condensed.text-left.table-bordered
            tr
              td username
              td test
            tr
              td password
              td test
