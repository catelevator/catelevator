extends ../layout
block body
  include ../navbar
  div(style="background-color:#f7f7f8")
    .container
      br
      br
      .col-md-4.col-md-offset-4
        if message
          h3=message
        form(action='/user/signup', method='post')
          .panel.panel-default
            .panel-body
              .form-group
                input.input-lg.form-control(type='text', name='email', placeholder='Your email address')
              .form-group
                hr
              input(type='submit', value='Create account').button.button-flat-action.pull-right.btn-block

