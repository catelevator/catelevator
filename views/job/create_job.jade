extends ../layout
block body
  include ../navbar
  form(target="job/create", method="POST").form.job_form.container
    
      .col-md-10.col-md-offset-1
        br
        h1.text-center.skinny Crowd source in seconds.
        .col-xs-12
          hr
          ul.nav.nav-tabs.nav-justified.setup-panel
